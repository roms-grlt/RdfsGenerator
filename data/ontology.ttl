# ========================================
# CLASSES
# ========================================

unified:film  rdf:type  rdfs:Class .

amazon:AmazonFilm  rdf:type  rdfs:Class;
        rdfs:subClassOf  unified:film .

imdb:ImdbFilm  rdf:type  rdfs:Class;
        rdfs:subClassOf  unified:film .

netflix:NetflixFilm  rdf:type  rdfs:Class;
        rdfs:subClassOf  unified:film .

# ========================================
# PROPRIETES UNIFIEES (niveau unified)
# ========================================

unified:title  rdf:type  rdf:Property;
        rdfs:domain  unified:film;
        rdfs:range   rdfs:Literal .

unified:rating  rdf:type  rdf:Property;
        rdfs:domain  unified:film;
        rdfs:range   rdfs:Literal;
        rdfs:comment "Note du film (echelle variable selon la source)" .

unified:genre  rdf:type  rdf:Property;
        rdfs:domain  unified:film;
        rdfs:range   rdfs:Literal .

unified:duration  rdf:type  rdf:Property;
        rdfs:domain  unified:film;
        rdfs:range   rdfs:Literal;
        rdfs:comment "Duree du film en minutes" .

unified:releaseDate  rdf:type  rdf:Property;
        rdfs:domain  unified:film;
        rdfs:range   rdfs:Literal;
        rdfs:comment "Date ou annee de sortie du film" .

unified:contentRating  rdf:type  rdf:Property;
        rdfs:domain  unified:film;
        rdfs:range   rdfs:Literal;
        rdfs:comment "Classification du contenu (MPAA, certificate, etc.)" .

unified:contentAdvisory  rdf:type  rdf:Property;
        rdfs:domain  unified:film;
        rdfs:range   rdfs:Literal;
        rdfs:comment "Avertissements sur le contenu (violence, nudite, etc.)" .

